<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/invite_bg" />

        <ImageButton
            android:id="@+id/invite_qq_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:src="@drawable/invite_qq_selector" />

        <ImageButton
            android:id="@+id/invite_sina_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_gravity="bottom"
            android:layout_marginBottom="45dp"
            android:src="@drawable/invite_sina_selector" />
          <ImageButton
            android:id="@+id/invite_wx_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="45dp"
            android:src="@drawable/invite_wx_selector" />

    </FrameLayout>

</RelativeLayout>