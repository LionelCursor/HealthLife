<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aicre.wuliuapp.app.activity.SearchActivity">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_account"
        android:layout_marginTop="70dp"
        android:hint="请输入帐号"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_psw"
        android:layout_marginTop="24dp"
        android:hint="请输入密码"
        android:layout_below="@id/edit_account"
        android:layout_alignLeft="@id/edit_account"
        android:layout_alignStart="@id/edit_account" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@color/white"
        android:id="@+id/button"
        android:layout_marginTop="28dp"
        android:layout_below="@id/edit_psw"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
