<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.healthslife"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <FrameLayout
        android:id="@+id/fragment_heart_rate_l_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <com.healthslife.widget.CircleProgress
            android:id="@+id/fragment_heart_rate_porbar"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android_custom:max="1000"
            android_custom:roundColor="#78c7fd"
            android_custom:roundProgressColor="#0275c5"
            android_custom:roundWidth="20dip"
            android_custom:textColor="#9A32CD"
            android_custom:textIsDisplayable="false"
            android_custom:textSize="18sp" />
        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dial" > 
            <TextView
                android:id="@+id/heart_rate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="95dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="127"
                android:textColor="#78c7fd"
                android:textSize="58sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout android:id="@+id/fragment_heart_rate_l_relativelayout_grid"
        android:layout_width="300dp"
        android:layout_height="90dp"
        >
		<ImageView android:id="@+id/fragment_heart_rate_l_grid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/hbr_image"
		    android:background="@null"/>
		<ImageView android:id="@+id/fragment_heart_rate_l_grid"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/line"/>
    </RelativeLayout>
    
    <ImageButton
        android:id="@+id/fragment_heart_rate_l_start"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:background="@null"
        android:src="@drawable/heart_rate_start_selector"/>
</LinearLayout>
